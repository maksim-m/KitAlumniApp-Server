<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
 
    <persistence-unit name="KitAlumniAppPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
 
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			
			<!-- database host and name -->
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/ExampleDatabase"/>
			<!-- username -->
            <property name="hibernate.connection.username" value="ExampleUserName"/>
			<!-- password -->
            <property name="hibernate.connection.password" value="ExampleUserPassword"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<!-- for local (test) database use "create" -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="show_sql" value="ture"/>
            <property name="format_sql" value="true"/>
            <property name="use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>